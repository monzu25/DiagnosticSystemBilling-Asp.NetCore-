@model IEnumerable<MVC_CityLab.Investigations>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SLNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TestGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SLNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReportGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fee)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TestName }) |
            @Html.ActionLink("Details", "Details", new { id=item.TestName }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TestName })
        </td>
    </tr>
}

</table>
